<% if @current_user %>

<h1><%= @place["name"] %></h1>

<div class="mt-4">
  <h2>My Posts</h2>
  <div class="row">

<% for post in @posts %>
<div class="col-md-4 col-sm-12">
  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>
  <p><%= post["description"] %></p>
<% end %>
</div>
</div>

<div class="mt-3">
  <p>
    <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
  </p>
</div>

<% else %>
<p>Please log in to view and add new posts</p>
<% end %>

<p>
  <a href="/places">Back to All Places</a>
</p>